{
  "name": "cma-backend-root",
  "version": "1.0.0",
  "description": "Root of CMA Backend Monorepo",
  "private": true,
  "scripts": {
    "install:all": "npm install",
    "dev:gateway": "npm run dev -w apps/api-gateway",
    "dev:worker": "npm run dev -w apps/worker",
    "dev:socket": "npm run dev -w apps/socket",
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:worker\" \"npm run dev:socket\" --names \"GATEWAY,WORKER,SOCKET\" --prefix-colors \"blue,yellow,magenta\""
  },
  "workspaces": [
    "apps/*",
    "libs/core/*",
    "libs/modules/*"
  ],
  "devDependencies": {
    "concurrently": "^8.0.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.3"
  },
  "author": "",
  "license": "ISC"
}
